<section class="page-section" id="contact">
  <div class="container">
    <div class="text-center">
      <h2 class="section-heading text-uppercase">
        {% if heading%}{{ heading }}{% else %}Schreib uns!{% endif %}
      </h2>
      <h3 class="section-subheading text-light">
        {% if subheading%}{{ subheading }}{% else %} Wir freuen uns immer Ã¼ber
        Feedback und neue Mitglieder, sowohl Kreative als auch Sponsoren.{%
        endif %}
      </h3>
    </div>
    <form name="contact" method="POST">
      <input type="hidden" name="form-name" value="contact" />
      <div class="row">
        <div class="col-lg-6 col-sm-12 text-center">
          <label class="w-100">
            name
            <input
              class="formelem"
              name="name"
              placeholder="Dein Name"
              required
              aria-required
            />
          </label>
        </div>
        <div class="col-lg-6 col-sm-12 text-center">
          <label class="w-100">
            E-Mail Adresse
            <input
              class="formelem"
              type="email"
              name="email"
              placeholder="Deine E-Mail Adresse"
              required
              aria-required
            />
          </label>
        </div>
      </div>
      <div class="text-center">
        <label class="w-100 h" style="color: transparent">
          Nachricht
          <textarea
            class="formelem"
            name="message"
            placeholder="Deine Nachricht an uns"
            rows="5"
            required
            aria-required
          ></textarea>
        </label>
      </div>
      <div class="text-center">
        <button class="formButton mt-4" type="submit">
          Nachricht abschicken
        </button>
      </div>
    </form>
  </div>
</section>
