<nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <a class="navbar-brand" href="/">AKVIDEO</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% for item in frontpage.navigation.items %}
        <li class="nav-item">
          {% if active and active == forloop.index %}
          <a class="nav-link active" href="{{ item.url }}">{{ item.text }}</a>
          {% else %}
          <a
            class="nav-link"
            href="{{ item.url }}"
            data-bs-target="{{ item.url | | remove_leading_slash }}"
          >
            {{ item.text }}
          </a>
          {% endif%}
        </li>
        {% endfor %}
      </ul>
      <form method="GET" action="/suche/" class="d-flex">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Suchbegriff"
          aria-label="Suchen"
          name="query"
        />
        <button class="btn btn-primary" type="submit">Suchen</button>
      </form>
    </div>
  </div>
</nav>
